<?xml version="1.0"?>
<log4net>
  <appender name="ExtraConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %logger - %message%newline" />
    </layout>
  </appender>

  <logger name="slf4net">
    <level value="ALL"/>
    <appender-ref ref="ExtraConsoleAppender"/>
  </logger>
</log4net>